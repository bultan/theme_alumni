@import "compass";
@import "breakpoint";
@import "singularitygs";
@import "import/reset"; 
@import "import/mixins";
@import "import/fonts"; 
@import "import/typography"; 
@import "import/elements"; 
@import "import/forms"; 
@import "import/wordpress"; 
@import "import/tabbed-content";

body {
	background: #fff;
}

.custom-content {
	max-width: 1080px;
	margin: 0 auto;
}

.content-area {
	@include breakpoint(min-width 760px) {
		float: left;
		width: 100%;
		margin-left: -232px;
		padding-left: 232px;
	}
}

.error404 .content-area {
	margin: 0;
	padding: 0;
}

.site-main {
	padding: 0 20px 20px 0;
	@include breakpoint(max-width 760px) {
		padding: 0 10px;
	}
}

.single .site-main {
	padding: 0;
	width: 90%;
	margin: 12px 0 0 0;
	float: left;
	position: relative;
	@include breakpoint(max-width 1050px) {
		width: 100%;
	}
	@include breakpoint(max-width 760px) {
		width: 100%;
		float: none;
		padding: 0 5px;
	}
}

.single .entry-title {
	@include font-size(26);
	color: #d2515e;
	font-family: $font-interstate;
	margin-bottom: 20px;
}

.single .entry-content {
	width: 100%;
}

.content-wrap {
	width: 100%;
}

.site-content {
	@extend .custom-content;
}

.site-content .widget-area {
	float: right;
	padding: 0 0 0 10px;
	width: 232px;
	margin: 0;
	@include breakpoint(max-width 760px) {
		float: none;
		width: auto;
		margin: 1em auto 0;
		padding: 0 10px;
		max-width: 760px;
	}
}

.site-footer {
	clear: both;
	width: 100%;
}
.copyright {
	float: left;
	@include breakpoint(max-width 760px) {
		float: none;
	}
}
.ef-link {
	float: right;
	@include breakpoint(max-width 760px) {
		float: none;
	}
	a {
		@include font-size(14);
		color: #fff;
		font-family: $font-garamond;
		font-style: italic;
		padding: 16px 0;
		margin: 0;
		@include breakpoint(max-width 760px) {
			padding: 10px 0;
		}
	}
}

/*----------- Header Styles -------------*/


.site-header {

}

.site-branding {
	@extend .custom-content;
	@include clearfix();
	padding: 0;
}

.logo {
	float: left;
	margin: 0 0 10px 0;
}

.main-navigation {
	border-top: 1px solid #ddd;
	border-bottom: 1px solid #ddd;
}

.menu-main-menu-container {
	@extend .custom-content;
	ul {
		margin: 0;
		padding: 0;
		list-style: none;
		li {
			float: left;
			a {
				@include font-size(12);
				font-family: $font-interstate;
				color: #000;
				padding: 15px 12px;
				text-transform: uppercase;
				&:hover {
					color: #e8244f;
				}
			}
			&:first-child a {
				padding-left: 0;
			}
		}
	}
}

#wpadminbar, .loginbar {
	@include border-bottom-right-radius(6px);
	@include border-bottom-left-radius(6px);
	position: static !important;
	float: right;
	width: auto;
	min-width: 0;
	clear: right;
	background: #fff;
}

.loginbar {
	padding: 8px 15px;
	ul {
		margin: 0;
		padding: 0;
		list-style: none;
		li {
			float: left;
			a {
				@include font-size(17);
				color: #000;
				font-family: $font-garamond;
				font-style: italic;
				padding: 0 8px;
				display: block;
				border-right: 1px solid #bbb;
				&:hover {
					color: #000;
				}
			}
			&:last-child a {
				border-right: none;
			}
		}
	}
}

#wpadminbar a.ab-item {
	@include font-size(14);
	font-family: $font-interstate;
	color: #fff;
}

#wpadminbar .ab-top-menu>li.hover>.ab-item, #wpadminbar .ab-top-menu>li:hover>.ab-item, #wpadminbar .ab-top-menu>li>.ab-item:focus, #wpadminbar.nojq .quicklinks .ab-top-menu>li>.ab-item:focus{
	background: #333336;
	color: #bbb;
}

#wpadminbar .menupop .ab-sub-wrapper, #wpadminbar .shortlink-input {
	background: #333336;
}

#wpadminbar .quicklinks .menupop ul.ab-sub-secondary, #wpadminbar .quicklinks .menupop ul.ab-sub-secondary .ab-submenu {
	background: #414143;
}

#wpadminbar .quicklinks .menupop ul li a:hover,#wpadminbar .quicklinks .menupop .ab-sub-secondary>li .ab-item:focus a, #wpadminbar .quicklinks .menupop .ab-sub-secondary>li>a:hover {
	color: #bbb !important;
}

#wpadminbar #wp-admin-bar-user-info .display-name, #wpadminbar #wp-admin-bar-user-info .username {
	@include font-size(14);
	font-family: $font-interstate;
	color: #fff;
}

.site-description {
	float: left;
	clear: right;
}


/*------------- Widget Area --------------*/

.widget {
	background: #fff;
	color: #000;
	font-family: $font-interstate;
	margin: 0 0 10px 0;
	padding: 0 14px 10px 14px;
	p {
		@include font-size(12);
	}
}

.widget-title, .search-title {
	@include font-size(18);
	text-transform: uppercase;
	margin-bottom: 10px;
	background: #fff;
	color: #000;
	border-bottom: 1px dotted #000;
	padding: 10px 0;
}

.vcalendar {
	margin-left: 0;
}

.vcalendar .entry-title a {
	@include font-size(13);
	font-family: $font-interstate;
	float: left;
	width: 120px;
	line-height: 1.9;
	border-right: 1px dotted #000;
	padding-right: 13px;
	&:hover {
		color: #d2515e;
	}
}

.duration {
	float: right;
	width: 80px;
	text-align: right;
	position: absolute;
	top: 50%;
	margin-top: -12px;
	right: 0;
	text-align: right; 
	.date-start {
		@include font-size(16);
		font-weight: normal;
		color: #d2515e;
	}
}

.tribe-events-list-widget ol li {
	margin-bottom: 16px;
	position: relative;
}

.tribe-events-widget-link {
	margin: 0;
	a {
		color: #d2515e;
		font-weight: normal !important;
		font-family: $font-interstate-light;
		&:hover {
			color: #000;
		}
	}
}

#buddypress {
	.standard-form {
		label {
			@include font-size(16);
			font-family: $font-interstate-light;
			margin: 0 0 10px 0;
			color: #d2515e;
			font-weight: normal;
		}
	}
	input[type=submit] {
		background: #d2515e;
		border: 1px solid #d2515e;
		color: #fff;
		padding: 9px 18px;
		text-transform: uppercase;
		box-shadow: none;
		text-shadow: none;
	}	
}

.search-widget {
	margin-top: 20px;
	aside {
		padding: 0;
	}
}

.activity {
	color: #d2515e;;
}

/*-------------- Flexslider Styles ----------------- */

.metaslider {
}

.metaslider .caption {
	@include font-size(12);
    padding: 5px 10px;
    word-wrap: break-word;
    font-family: $font-interstate;
}

/*--------------- index page styles -------------------*/

.stories-title {
	@include font-size(18);
	text-transform: uppercase;
	margin-bottom: 10px;
	color: #000;
	border-bottom: 1px dotted #000;
	padding: 10px 0;
	font-family: $font-interstate;
}

.post {
	@include clearfix();
}

.entry-title a {
	@include font-size(20);
	color: #333336;
	font-family: $font-garamond;
}

.page .entry-title {
	@include font-size(26);
	color: #d2515e;
	font-family: $font-interstate;
	margin-top: 10px;
}

.posted-date {
	@include font-size(12);
	color: #000;
	font-family: $font-interstate;
	margin: 10px 0;
}

.post-thumb {
	float: left;
	margin: 0 15px 0 0;
	width: 20%;
}

.single-post-thumbnail {
	border: 1px dotted #000;
	padding: 4px;
	img {
		display: block;
	}
}

.entry-content {
	@include font-size(14);
	float: left;
	width: 76%;
	margin: 0;
	font-family: $font-interstate-light;
	p {
		margin: 0 0 12px 0;
	}
}

.continue-reading {
	float: left;
	width: 68%;
	a {
		color: #000;
		font-weight: normal !important;
		font-family: $font-garamond;
		font-style: italic;
		i {
			position: relative;
			margin-left: 4px;
			&:before {
				position: absolute;
				top: 2px;
				color: #d2515e;
			}
		}
		&:hover {
			color: #000;
		}
	}
}

.paging-navigation ul {
    margin: 0;
}

.paging-navigation li { display: inline; }

a.page-numbers,
span.page-numbers {
     padding: .3em .7em;
     color: #333;
     color: hsl(0, 0%, 20%);
}

a:hover.page-numbers {
    color: #000;
    color: hsl(0, 0%, 0%);
}

.paging-navigation .current {
    font-weight: bold;
    color: #000;
    color: hsl(0, 0%, 0%);
}

/*--------------- Inner pages styles ------------------ */

.buddypress .entry-content {
	width: 100%;
}

/*--------------- Search styles ----------------------- */

.social-media-top {
	float: right;
	clear: right;
	margin-top: 17px;
	position: relative;
}

.widget-social {
	float: right;
	ul {
		margin: 0;
		padding: 0;
		list-style: none;
		li {
			float: left;
			a {
				@include font-size(20);
				color: #000;
				margin: 0 15px 0 0;
				&:hover {
					color: #D2515E;
				}
				span {
					text-indent: -9999px;
					display: block;
				}
			}
		}
	}
}

.search-submit {
	background: none;
	border: none;
	padding: 0;
	border-radius: 0;
	position: absolute;
	top: 7px;
	right: 26px;
	&:before {
		@extend %icon;
		@include font-size(16);
		content: "\f002";
		position: absolute;
	}
}

.serach-box {
	@include font-size(12);
	border-radius: 20px !important;
	font-family: $font-interstate;
	width: 225px;
	padding: 6px 10px !important;
	outline: none;
	color: #ccc;
	border: none !important;
}

/* --------------- Directory Search ----------------- */

#buddypress div.dir-search {
	margin-top: -37px;
}

#buddypress .dir-search {
	#groups_search, #members_search {
		@include border-radius(4px);
		padding: 6px 10px;
	}
}

#buddypress div#message p, #sitewide-notice p {
	background-color: #FFEDEF;
	border: 1px solid #d2515e;
	color: #000;
	font-family: $font-interstate-light;
}

#buddypress .dir-form {
	padding-top: 30px;
}

#buddypress div.item-list-tabs {
	clear: none;
	ul {
		@include clearfix();
		border-bottom: 1px solid #d2515e;
	}
}

#buddypress .groups {
	clear: both;
	padding-top: 32px;
}

#buddypress div.item-list-tabs ul li {
	margin: 0 3px -1px 0;
}

#buddypress div.item-list-tabs ul li a {
	@include border-top-right-radius(10px);
	@include border-top-left-radius(10px);
	border: 1px solid #d2515e;
}

#buddypress div.item-list-tabs ul li.selected a {
	border-bottom-color: #FFEDEF;
	background: #FFEDEF;
}

#buddypress #message.info {
	margin: 16px 0;
}

#buddypress .activity-type-tabs {
	margin-top: 30px;
}

/* --------------- Wordpress button styles ---------- */

.wp-core-ui .button-primary {
	background: #d2515e;
}

.field-visibility-settings-notoggle, .field-visibility-settings-toggle {
	display: none
}

#buddypress .register-section label {
	@include font-size(14);
	color: #000;
}

#register-page {
	margin:25px 0 0 0;
}

.register-section {
	h4 {
		@include font-size(18);
		text-transform: uppercase;
		margin-bottom: 10px;
		background: #fff;
		color: #d2515e;
		border-bottom: 1px dotted #000;
		padding: 10px 0;
	}
}

/* --------------- Comments section ---------------- */

.comment-reply-title {
	@include font-size(18);
	color: #d2515e;
	font-family: $font-interstate;
	margin-bottom: 20px;
}

/* --------------- Footer Styles -------------------- */

.site-footer {
	background: #333336;
	border-top: 4px solid #D2515E;
	margin-top: 40px;
}

.site-info {
	@include clearfix();
	@extend .custom-content;
	@include font-size(12);
	color: #fff;
	padding: 10px 0;
	font-family: $font-interstate;
}

.copyright-info {
	float: left;
	margin-top: 4px;
}

